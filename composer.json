    "version": "1.0.0",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Emanuel Jacob",
            "email": "info@slashplus.de",
            "homepage": "https://www.slashplus.de"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "~7.3|~8.0",
        "illuminate/filesystem": "^6.0",
        "illuminate/translation": "^6.0",
        "illuminate/validation": "^6.0"
    },
    "keywords": [
        "age verification",
        "age check",
        "Personalausweis",
        "Reisepass",
